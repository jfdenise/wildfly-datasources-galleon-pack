<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:2.0" name="mysql-default-datasource">
    <props>
        <prop name="add-on" value="database,mysql:default"/>
        <prop name="add-on-description" value="Documentation in https://github.com/wildfly-extras/wildfly-datasources-galleon-pack"/>
        <prop name="add-on-fix-no-default-datasource" value=""/>
        <prop name="configuration" value="https://raw.githubusercontent.com/jfdenise/wildfly-datasources-galleon-pack/layers_metadata/doc/mysql/env.yaml"/>
        <prop name="add-on-depends-on" value="only:datasources"/>
    </props>
    <dependencies>
        <layer name="datasources"/>
        <layer name="mysql-datasource"/>
    </dependencies>
    
    <feature spec="subsystem.ee.service.default-bindings">
        <param name="datasource" value="java:jboss/datasources/${env.OPENSHIFT_MYSQL_DATASOURCE,env.MYSQL_DATASOURCE:MySQLDS}"/>
    </feature>
</layer-spec>

