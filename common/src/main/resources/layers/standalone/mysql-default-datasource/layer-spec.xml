<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="mysql-default-datasource">
    <props>
        <prop name="add-on" value="database,mysql:default"/>
        <prop name="add-on-cardinality" value="1"/>
        <prop name="add-on-fix-no-default-datasource" value="Required env variables, MYSQL_DATABASE=&lt;database name&gt; MYSQL_USER=&lt;user&gt; MYSQL_PASSWORD=&lt;password&gt;"/>
        <prop name="add-on-depends-on" value="only:datasources"/>
    </props>
    <dependencies>
        <layer name="mysql-datasource"/>
    </dependencies>
    
    <feature spec="subsystem.ee.service.default-bindings">
        <param name="datasource" value="java:jboss/datasources/${env.OPENSHIFT_MYSQL_DATASOURCE,env.MYSQL_DATASOURCE:MySQLDS}"/>
    </feature>
</layer-spec>

