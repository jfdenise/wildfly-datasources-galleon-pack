<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="h2database-driver">
    <feature spec="subsystem.datasources">
        <feature spec="subsystem.datasources.jdbc-driver">
            <param name="jdbc-driver" value="h2database"/>
            <param name="driver-name" value="h2database"/>
            <param name="driver-module-name" value="com.h2database.h2database"/>
            <param name="driver-xa-datasource-class-name" value="org.h2.jdbcx.JdbcDataSource"/>
        </feature>
    </feature>
    <packages>
        <package name="com.h2database.h2database"/>
    </packages>
</layer-spec>

